# ============================================
# Picfluencer Backend API Environment Variables
# ============================================
# Copy this file to .env and update with your values
# Never commit the actual .env file to version control

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?schema=[schema]
# For Docker: Use localhost and the mapped port
# For production: Use your production database URL
DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/picfluencer?schema=public"

# ============================================
# Authentication (Better Auth)
# ============================================
# Secret key for signing tokens and sessions
# Generate a secure random string: openssl rand -base64 32
# IMPORTANT: Use a different secret for production
BETTER_AUTH_SECRET="your-secret-key-here-change-in-production"

# Base URL for the authentication endpoints
# This should match where your backend is hosted
# Development: http://localhost:3000
# Production: https://api.yourdomain.com
BETTER_AUTH_URL="http://localhost:3000"

# ============================================
# Email Service (Optional - for production)
# ============================================
# Configure these when you're ready to send real emails
# Currently, magic links are logged to console in development

# Example for Resend
# RESEND_API_KEY="re_your_api_key_here"
# EMAIL_FROM="noreply@picfluencer.app"

# Example for SendGrid
# SENDGRID_API_KEY="SG.your_api_key_here"
# EMAIL_FROM="noreply@picfluencer.app"

# Example for AWS SES
# AWS_ACCESS_KEY_ID="your_access_key"
# AWS_SECRET_ACCESS_KEY="your_secret_key"
# AWS_REGION="us-east-1"
# EMAIL_FROM="noreply@picfluencer.app"

# ============================================
# Server Configuration
# ============================================
# Port for the server to listen on
# Default: 3000
PORT=3000

# Node environment
# Options: development, production, test
NODE_ENV="development"

# ============================================
# CORS Configuration (Optional)
# ============================================
# Allowed origins for CORS (comma-separated)
# Default allows localhost and mobile app
# Add your production domains here
CORS_ORIGINS="http://localhost:3000,http://localhost:8081,exp://*,picfluencer://"

