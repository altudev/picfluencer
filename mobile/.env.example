# ============================================
# Picfluencer Mobile App Environment Variables
# ============================================
# Copy this file to .env and update with your values
# Never commit the actual .env file to version control

# ============================================
# API Configuration
# ============================================
# Backend API URL
# For iOS Simulator: Use localhost
# For Android Emulator: Use 10.0.2.2
# For Physical Device: Use your machine's IP address
# For Production: Use your production API URL
API_URL="http://localhost:3000/api/auth"

# API base URL without the auth path
API_BASE_URL="http://localhost:3000"

# ============================================
# App Configuration
# ============================================
# App environment
# Options: development, staging, production
APP_ENV="development"

# App scheme for deep linking
# This should match the scheme in app.json
APP_SCHEME="picfluencer"

# ============================================
# Feature Flags (Optional)
# ============================================
# Enable/disable features during development
ENABLE_ANONYMOUS_AUTH="true"
ENABLE_MAGIC_LINK="true"
ENABLE_SOCIAL_AUTH="false"
ENABLE_BIOMETRIC_AUTH="false"

# ============================================
# Analytics (Optional)
# ============================================
# Segment Write Key
# SEGMENT_WRITE_KEY="your_write_key_here"

# Amplitude API Key
# AMPLITUDE_API_KEY="your_api_key_here"

# Mixpanel Token
# MIXPANEL_TOKEN="your_token_here"

# PostHog API Key
# POSTHOG_API_KEY="phc_your_key_here"
# POSTHOG_HOST="https://app.posthog.com"

# ============================================
# Error Tracking (Optional)
# ============================================
# Sentry DSN for crash reporting
# SENTRY_DSN="https://your_key@sentry.io/project_id"
# SENTRY_ENV="development"

# Bugsnag API Key
# BUGSNAG_API_KEY="your_api_key_here"

# ============================================
# Push Notifications (Future Implementation)
# ============================================
# OneSignal App ID
# ONESIGNAL_APP_ID="your_app_id_here"

# Firebase Cloud Messaging
# FCM_SENDER_ID="your_sender_id"

# ============================================
# Social Authentication (Future Implementation)
# ============================================
# Google OAuth (for native sign-in)
# GOOGLE_WEB_CLIENT_ID="your_client_id.apps.googleusercontent.com"
# GOOGLE_IOS_CLIENT_ID="your_ios_client_id.apps.googleusercontent.com"
# GOOGLE_ANDROID_CLIENT_ID="your_android_client_id.apps.googleusercontent.com"

# Facebook App ID
# FACEBOOK_APP_ID="your_app_id"
# FACEBOOK_APP_NAME="Picfluencer"

# Apple Sign In (iOS only)
# APPLE_SERVICE_ID="com.picfluencer.service"

# ============================================
# Storage & CDN (Optional)
# ============================================
# CDN URL for serving static assets
# CDN_URL="https://cdn.picfluencer.app"

# Image optimization service
# IMGIX_DOMAIN="picfluencer.imgix.net"

# ============================================
# Development Tools (Optional)
# ============================================
# React Native Debugger
# REACT_DEBUGGER="true"

# Flipper Integration
# FLIPPER_ENABLED="true"

# Redux DevTools
# REDUX_DEVTOOLS="true"

# ============================================
# In-App Purchases (Future Implementation)
# ============================================
# Revenue Cat API Key
# REVENUECAT_API_KEY="your_api_key_here"

# iOS App Store
# IOS_BUNDLE_ID="com.picfluencer.app"

# Android Play Store
# ANDROID_PACKAGE_NAME="com.picfluencer.app"

# ============================================
# AI Services (Future Implementation)
# ============================================
# These will be passed to the backend, not used directly

# Enable AI features in the app
# ENABLE_AI_FEATURES="false"

# ============================================
# Beta Testing (Optional)
# ============================================
# TestFlight / Play Console
# BETA_FEATURES_ENABLED="false"
# BETA_USER_FEEDBACK_URL="https://forms.gle/your_form_id"

# ============================================
# Legal & Compliance
# ============================================
# Links to legal documents
# TERMS_OF_SERVICE_URL="https://picfluencer.app/terms"
# PRIVACY_POLICY_URL="https://picfluencer.app/privacy"
# SUPPORT_EMAIL="support@picfluencer.app"